@{
  Layout = "_Layout";
}
    <h1>Add a new record to @Model.Name</h1>

    <form action="/artists/@Model.Id/records" method="post">
      <input id="artistId" name="artistId" type="hidden" value="@Model.Id">
      <label for="recordDescription">Record Description</label>
      <input id="recordDescription" name="recordDescription" type="text">
      <button type='submit'>Add Record</button>
    </form>
